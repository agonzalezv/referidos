<%= devise_error_messages! %>

<% content_for :panel_title do %>
  <%= t('.sign_up', :default => "Sign up") %>
<% end %>

<% content_for :panel_body do %>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.input :name, autofocus: true, required: 'required' %>
    <%= f.input :surname, autofocus: true, required: 'required' %>
    <%= f.input :gender, collection: GENDERS, :include_blank => false %>
    <%= f.input :marital_status, collection: MARITAL_STATUSES, :include_blank => false %>
    <%= f.input :date_of_birth, as: :date, start_year: Date.today.year, end_year: Date.today.year - 100, order: [:day, :month, :year] %>
    <%= f.input :document_id, autofocus: true, required: 'required' %>
    <%= f.input :email, autofocus: true, required: 'required' %>
    <%= f.input :secondary_email, autofocus: true %>
    <%= f.input :city, collection: CITIES, :include_blank => false %>
    <%= f.input :phone  %>
    <%= f.input :address  %>
    <%= f.input :mobile  %>
    <%= f.input :bank_department, collection: BANK_DEPARTMENTS, :include_blank => false %>
    <%= f.input :occupation %>
    <%= f.input :number_of_children, value: 0 %>
    <%= f.input :password, required: 'required' %>
    <%= f.input :password_confirmation, required: 'required' %>
    <%= f.input :preferences, collection: USER_PREFERENCES, input_html: { multiple: true }, :include_blank => false, :include_hidden => false %>
    <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>
  <% end %>
  <hr/>
  <%= render "devise/shared/links" %>
<% end %>


