<% content_for :panel_title do %>
    Refer someone
<% end %>

<% content_for :panel_body do %>
  <%= simple_form_for [:users, @referral] do |f| %>
    <%= render 'shared/messages', flash: flash %>
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :document_id %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :mobile %>
    <%= f.input :city %>
    <%= f.button :submit %>
  <% end %>
<% end %>